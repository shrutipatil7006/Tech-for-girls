        }

        @keyframes burst-float {
            0% {
                transform: translate(var(--start-x, 0), var(--start-y, 0)) scale(0);
                opacity: 0;
            }
            20% {
                transform: translate(var(--start-x, 0), var(--start-y, 0)) scale(1.2); /* Slightly larger initial scale */
                opacity: 1; /* Fully opaque at peak */
            }
